<div class="container">
  <h3><%= gravatar_for user, size: 50 %> <%= link_to user.name, user %></h3>
  <p><%= user.email %></p>
  <%= link_to 'Edit', edit_user_path(user) %>
  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if current_user.admin? && !current_user?(user) %>
</div>

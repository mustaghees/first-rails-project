<div class="jumbotron">
  <h1 class="display-4">Project: Learning Ruby on Rails</h1>
  <p class="lead">Welcome!</p>
  <hr class="my-4">
  <p>This is a sample/practice project for learning Ruby on Rails.</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
  </p>
</div>

<div class="container-fluid">
  <% if user_signed_in? %>
    <div class="row">
      <aside class="col-md-4">
        <%= render 'shared/user', user: current_user, show_user_settings: true %>

        <section id='post-form' class="container mt-3">
          <h3>New Post</h3>
          <%= render 'shared/post_form', post: @post %>
        </section>
      </aside>

      <main class="col-md-8">
        <div class="mt-3">
          <%= render 'shared/feed' %>
        </div>
      </main>
    </div>
  <% end %>
</div>
